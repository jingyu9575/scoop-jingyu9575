{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Check version and auto-update",
			"type": "shell",
			"command": "checkver",
			"args": [
				"-dir",
				"bucket",
				"${fileBasenameNoExtension}",
				"-u"
			],
			"problemMatcher": []
		},
		{
			"label": "Uninstall",
			"type": "shell",
			"command": "scoop",
			"args": [
				"uninstall",
				"${fileBasenameNoExtension}",
			],
			"problemMatcher": []
		},
		{
			"label": "Reinstall",
			"type": "shell",
			"command": "scoop",
			"args": [
				"install",
				"${fileBasenameNoExtension}",
			],
			"dependsOn": "Uninstall",
			"problemMatcher": []
		},
		{
			"label": "Update",
			"type": "shell",
			"command": "scoop",
			"args": [
				"update",
				"${fileBasenameNoExtension}",
				"-f",
			],
			"problemMatcher": []
		},
	]
}